{
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "printWidth": 80,
  "singleQuote": true,
  "jsxSingleQuote": true,
  "tabWidth": 2,
  "trailingComma": "es5",
  "useTabs": false,
  "endOfLine": "lf",
  "importOrder": [
    "^@store/(.*)$",
    "^@context/(.*)$",
    "^@components/(.*)$",
    "^@hooks/(.*)$",
    "^@images/(.*)$",
    "^@icons/(.*)$",
    "^[./]",
    "^[../]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
